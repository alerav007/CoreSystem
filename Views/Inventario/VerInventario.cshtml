@model List<CoreSystem.Models.Producto>

@{
    ViewData["Title"] = "Ver Inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Inventario de Productos</h2>

<a asp-controller="Inventario" asp-action="Entrada" class="btn btn-success mb-3">
    <i class="bi bi-box-arrow-in-down"></i> Nueva Entrada
</a>

<table class="table table-bordered table-striped" style="background-color: white;">
    <thead style="background-color: white; color: black;">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th>Precio</th>
            <th>Cantidad en Stock</th>
        </tr>
    </thead>
    <tbody style="background-color: white; color: black;">
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.IdProducto</td>
                <td>@producto.Nombre</td>
                <td>@producto.Descripcion</td>
                <td>@producto.Precio.ToString("C")</td>
                <td>@producto.CantidadEnStock</td>
            </tr>
        }
    </tbody>
</table>

