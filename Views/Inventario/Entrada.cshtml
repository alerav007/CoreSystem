@model CoreSystem.Models.Entrada
@{
    ViewData["Title"] = "Agregar Entrada";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agregar Entrada</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="IdProducto"></label>
        <select asp-for="IdProducto" class="form-control" asp-items="ViewBag.Productos"></select>
        <span asp-validation-for="IdProducto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cantidad"></label>
        <input asp-for="Cantidad" class="form-control" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PrecioCompra"></label>
        <input asp-for="PrecioCompra" class="form-control" />
        <span asp-validation-for="PrecioCompra" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaEntrada"></label>
        <input asp-for="FechaEntrada" class="form-control" type="date" />
        <span asp-validation-for="FechaEntrada" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Observaciones"></label>
        <input asp-for="Observaciones" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
</form>